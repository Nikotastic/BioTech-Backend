{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "dockerfilePath": "HerdService.Dockerfile",
        "builder": "DOCKERFILE"
    },
    "deploy": {
        "startCommand": "dotnet HerdService.Presentation.dll",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}