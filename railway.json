{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "dotnet build ApiGateWay/ApiGateWay.csproj -c Release"
  },
  "deploy": {
    "startCommand": "dotnet ApiGateWay/bin/Release/net8.0/ApiGateWay.dll",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}